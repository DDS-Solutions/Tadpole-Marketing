                <!-- Layer Blocks -->
                <rect x="50" y="50" width="200" height="80" rx="4" fill="rgba(24, 24, 27, 0.8)" stroke="#3f3f46" stroke-width="1" />
                <rect x="50" y="210" width="200" height="80" rx="4" fill="rgba(24, 24, 27, 0.8)" stroke="#3f3f46" stroke-width="1" />
                <rect x="50" y="370" width="200" height="80" rx="4" fill="rgba(16, 185, 129, 0.1)" stroke="#10b981" stroke-width="1" />
                
                <!-- Connection Lines -->
                <path d="M150 130 L150 210" stroke="#3f3f46" stroke-width="2" marker-end="url(#arrowhead)" />
                <path d="M150 290 L150 370" stroke="#10b981" stroke-width="2" marker-end="url(#arrowhead)" class="neural-line" stroke-dasharray="10 10" />
                
                <!-- Text Labels -->
                <text x="150" y="95" text-anchor="middle" fill="#71717a" font-family="monospace" font-size="12">DIRECTIVE</text>
                <text x="150" y="255" text-anchor="middle" fill="#71717a" font-family="monospace" font-size="12">ORCHESTRATOR</text>
                <text x="150" y="415" text-anchor="middle" fill="#10b981" font-family="monospace" font-size="12" font-weight="bold">EXECUTION</text>

